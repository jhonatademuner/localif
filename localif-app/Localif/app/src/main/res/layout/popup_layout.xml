<!-- popup_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#50333339">

    <TextView
        android:id="@+id/wrong_locality_text_popup_title"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@id/wrong_locality_text_popup_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Top 5 localidades mais parecidas!"
        android:textSize="22sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/wrong_locality_text_popup_1"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/filled_rounded_all"
        app:layout_constraintTop_toBottomOf="@id/wrong_locality_text_popup_title"
        app:layout_constraintBottom_toTopOf="@id/wrong_locality_text_popup_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/wrong_locality_text_popup_2"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/filled_rounded_all"
        app:layout_constraintTop_toBottomOf="@id/wrong_locality_text_popup_1"
        app:layout_constraintBottom_toTopOf="@id/wrong_locality_text_popup_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/wrong_locality_text_popup_3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/filled_rounded_all"
        app:layout_constraintTop_toBottomOf="@id/wrong_locality_text_popup_2"
        app:layout_constraintBottom_toTopOf="@id/wrong_locality_text_popup_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/wrong_locality_text_popup_4"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/filled_rounded_all"
        app:layout_constraintTop_toBottomOf="@id/wrong_locality_text_popup_3"
        app:layout_constraintBottom_toTopOf="@id/wrong_locality_text_popup_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/wrong_locality_text_popup_5"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:background="@drawable/filled_rounded_all"
        android:layout_marginBottom="150dp"
        app:layout_constraintTop_toBottomOf="@id/wrong_locality_text_popup_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
